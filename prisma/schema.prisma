generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Department {
  DSA
  WEB_DEVELOPMENT
  IOT
  GAME_DEVELOPMENT_ANIMATION
  DEVOPS_CLOUD
  ML_DATA_SCIENCE
  MEDIA_GRAPHICS_VIDEO
  CORPORATE_RELATIONS
}

model Project {
  id          String     @id @default(cuid())
  name        String
  department  Department
  githubLink  String?
  liveLink    String?
  imageLinks  String[]
  doubts      String?    @db.Text
  marks       String     @default("")
  feedback    String?    @db.Text
  checked     Boolean    @default(false)
  accepted    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId      String
  user        User       @relation(fields: [userId], references: [id])
}

enum Role {
  MEMBER
  ADMIN
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String
  role      Role       @default(MEMBER)
  domain    Department[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  projects  Project[]
  resetToken String?   @unique
  resetTokenExpiry DateTime?
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}
